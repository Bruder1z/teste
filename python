#1 -# def fibonacci(n):
    if n <= 0:
        return "Número inválido"
    elif n == 1:
        return 0
    elif n == 2:
        return 1
    else:
        fib_prev, fib = 0, 1
        for _ in range(3, n+1):
            fib_prev, fib = fib, fib_prev + fib
        return fib


numero = int(input("Digite um número: "))

resultado = fibonacci(numero)

if resultado == numero:
    print(f"O número {numero} pertence à sequência de Fibonacci.")
else:
    print(f"O número {numero} não pertence à sequência de Fibonacci.")

#2-# def contar_as(texto):
    return texto.lower().count('a')

# Obter o texto do usuário
texto = input("Digite um texto: ")

ocorrencias = contar_as(texto)
print(f"A letra 'a' aparece {ocorrencias} vezes no texto.")

#3-#INDICE = 12
SOMA = 0
K = 1

while K < INDICE:
    K = K + 1
    SOMA = SOMA + K

print(SOMA)
#o valor final sera de 77, pois o K começa em 1 e vai ate -1 e a cada iteração, a variavel soma é incrementada com o valor atual de K
#e somando todos valor de 2 a 11 da 77

